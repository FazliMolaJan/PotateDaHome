<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="16dp"
        android:id="@+id/potato_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/default_potato_color" android:elevation="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        tools:context=".PotatoActivity">

    <LinearLayout
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:onClick="startPotatoColorPicker"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/title_potato"
                  android:id="@+id/potato_color_head"
                  android:padding="16dp"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  android:textAppearance="@android:style/TextAppearance.Material.Headline"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/title_potato"
                  android:paddingBottom="8dp"
                  android:paddingStart="16dp"
                  android:paddingEnd="16dp"
                  android:alpha="0.5"
                  android:id="@+id/potato_color_subhead"
                  android:textAppearance="@android:style/TextAppearance.Material.Subhead"/>
    </LinearLayout>

    <ImageButton
            android:contentDescription="@string/live_wallpaper_name"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:minHeight="@android:dimen/app_icon_size"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"
            android:id="@+id/potato_system_accent"
            android:onClick="setSystemAccentForPotato"
            android:alpha="0.5"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/ic_theme_accent"/>

</com.google.android.material.card.MaterialCardView>